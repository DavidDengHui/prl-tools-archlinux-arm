PREREQ=
ARCH=$(uname -m)

prereqs () {
	echo "$PREREQ"
}

case $1 in
prereqs)
	prereqs
	exit 0
	;;
esac

. /usr/share/initramfs-tools/hook-functions

manual_add_modules prl_tg
if [ "$ARCH" != "aarch64" ]; then
	manual_add_modules prl_vid
fi
